import json

def create_add_item_json(item_name, quantity, price):
    """
    Create a JSON object for adding an item with its quantity and price.

    Args:
    item_name (str): The name of the item.
    quantity (int): The quantity of the item.
    price (float): The price of the item.

    Returns:
    str: JSON object representing the item details.
    """
    item_details = {
        "item_name": item_name,
        "quantity": quantity,
        "price": price
    }
    add_item_json = json.dumps(item_details, indent=4)
    return add_item_json

# Example usage
item_name = "Apple"
quantity = 5
price = 1.99
add_item_json = create_add_item_json(item_name, quantity, price)
print(add_item_json)